{
  "extends": "../../tsconfig",
  "compilerOptions": {
    "baseUrl": ".",
    "module": "esnext",
    "noEmit": false,
    "outDir": "dist",
    "target": "es2017",
    "isolatedModules": true,
    "incremental": true,
    "jsx": "preserve",
    "paths": {
      "@purebase/utils": ["../utils/src"],
      "@purebase/utils/*": ["../utils/src/*"]
    }
  },
  "exclude": [
    "dist"
  ],
  "include": [
    "**/*.ts",
    "**/*.tsx"
  ]
}
