{
  "extends": "../../../tsconfig",
  "compilerOptions": {
    "baseUrl": ".",
    "module": "esnext",
    "noEmit": false,
    "outDir": "dist",
    "target": "es2017",
    "isolatedModules": true,
    "incremental": true,
    "jsx": "preserve",
    "paths": {
      "@shared/ui": ["../../shared_ui/src"],
      "@shared/ui/*": ["../../shared_ui/src/*"],
      "@shared/io": ["../../shared_io/src"],
      "@shared/io/*": ["../../shared_io/src/*"]
    }
  },
  "exclude": [
    "dist",
    ".next",
    "out",
    "next.config.js"
  ],
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx"
  ]
}
